                android:text="16 de julio 2019 | Bs. As. Balvanera"
                android:textSize="12sp"
                android:textStyle="normal"
                android:paddingBottom="5dp"/>


            <TextView
                android:id="@+id/content_description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description_sarkany_txt"
                android:textSize="14sp"
                android:textStyle="normal"/>

        </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>